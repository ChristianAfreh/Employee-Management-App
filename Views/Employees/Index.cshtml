@model IEnumerable<Employee_Management_App.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee List</h1>
<br />
<p>
    <a asp-action="Create"><button class="btn btn-success">Add New <i class="fas fa-user-plus"></i></button></a>
</p>
<table class="table-md table-striped" style="width:100%;padding:50%">
    <thead class="col-md-auto" style="background-color:#28a745; color:#ffffff">
        <tr>
            <th>First Name</th>

            <th>Last Name</th>

            <th>Position</th>

            <th>Department</th>

            <th>Salary(USD)</th>

            <th>Date Employed</th>

            <th>Last Updated</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEmployed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdated)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId"><button class="btn btn-sm btn-primary"><i class="fas fa-user-edit"></i></button></a>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId"><button class="btn btn-sm btn-warning"><i class="fas fa-address-card"></i></button></a>
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId"><button class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
