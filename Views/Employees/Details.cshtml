@model Employee_Management_App.Models.Employee

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Employee Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class = "col-sm-2">
            Salary(USD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class = "col-sm-2">
            Date Employed
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateEmployed)
        </dd>
        <dt class = "col-sm-2">
           Last Updated
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdated)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId"><button class="btn btn-md btn-primary">Update</button></a>
    <a asp-action="Index"><button class="btn btn-md btn-dark"><i class="fas fa-arrow-circle-left"></i> Back</button></a>
</div>
